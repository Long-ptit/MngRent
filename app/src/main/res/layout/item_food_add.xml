<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/layout"
        android:layout_width="match_parent"
        app:cardBackgroundColor="@color/color_unchecked_table"
        android:layout_marginTop="@dimen/dp18"
        app:cardCornerRadius="@dimen/dp10"
        android:layout_height="wrap_content" >

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_marginHorizontal="12dp"
           android:layout_height="wrap_content" >

           <ImageView
               android:id="@+id/img_logo"
               android:layout_width="match_parent"
               android:layout_height="@dimen/dp128"
               android:layout_marginVertical="12dp"
               android:scaleType="centerCrop"
               android:src="@drawable/img_test_food" />

           <TextView
               android:id="@+id/tv_title"
               android:layout_below="@id/img_logo"
               android:text="Vá»‹t quay"
               android:textColor="@color/colorWhite"
               android:layout_width="wrap_content"
               android:textSize="@dimen/sp14"
               android:layout_height="wrap_content" />

           <TextView
               android:id="@+id/tv_price"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@id/tv_title"
               android:layout_marginBottom="@dimen/dp15"
               android:text="70.000d"
               android:textColor="@color/colorWhite"
               android:textSize="@dimen/sp10" />

           <LinearLayout
               android:visibility="gone"
               android:id="@+id/layout_add_sub"
               android:layout_alignParentRight="true"
               android:layout_below="@id/img_logo"
               android:layout_marginTop="@dimen/dp10"
               android:layout_width="wrap_content"
               android:layout_marginBottom="@dimen/dp10"
               android:layout_height="wrap_content" >

               <ImageView
                   android:id="@+id/btn_sub"
                   android:src="@drawable/ic_sub_food"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />

               <TextView
                   android:id="@+id/tv_quantity"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="5"
                   android:layout_marginHorizontal="5dp"
                   android:textColor="@color/colorWhite" />

               <ImageView
                   android:id="@+id/btn_add"
                   android:src="@drawable/ic_add_food"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />


           </LinearLayout>

       </RelativeLayout>

    </androidx.cardview.widget.CardView>

</layout>