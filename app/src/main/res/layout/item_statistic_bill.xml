<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#BFD7EC"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        >

       <RelativeLayout
           android:padding="15dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content" >

           <TextView
               android:id="@+id/tv_time"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="18/05/2022"
               android:textColor="#68722B"
               android:textSize="14sp" />

           <TextView
               android:id="@+id/tv_quantity"
               android:textSize="14sp"
                android:layout_below="@id/tv_time"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/colorWhite"
               android:text="Món ăn: 100" />

           <TextView
               android:id="@+id/tv_table"
               android:textSize="14sp"
               android:layout_below="@id/tv_quantity"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/colorWhite"
               android:text="Bàn số: 2" />

           <TextView
               android:id="@+id/tv_sum"
               android:textSize="14sp"
               android:layout_toRightOf="@id/tv_quantity"
               android:layout_marginStart="40dp"
               android:layout_centerVertical="true"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/colorWhite"
               android:text="Tổng doanh thu: 1000000 VND" />



       </RelativeLayout>


    </androidx.cardview.widget.CardView>

</layout>